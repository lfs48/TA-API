{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "paths": {
      "*": ["node_modules/*", "*"],
      "@/*": ["./*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "prisma/migrations"]
}